{
  // // ********** Leitura no PC **********
  // "editor.fontFamily": "'Segoe UI'",
  // "editor.fontSize": 14,
  // "editor.wordWrapColumn": 37,
  // // **********  Leitura no Celular **********
  // "editor.fontFamily": "'Roboto'",
  // "editor.fontSize": 14,
  // "editor.wordWrapColumn": 49,
  // **********  Programação **********
  "editor.fontFamily": "Roboto Mono",
  // "editor.fontFamily": "Cascadia Mono",
  // "editor.fontFamily": "JetBrains Mono",
  // "editor.fontFamily": "Fira Code",
  // "editor.fontFamily": "Fantasque Sans Mono",
  // "editor.fontFamily": "Consolas",
  "editor.fontSize": 16,
  // "editor.wordWrap": "wordWrapColumn",
  // "editor.wordWrapColumn": 120,
  // "editor.lineHeight": 16,
  // "editor.letterSpacing": -0.8,
  // "editor.fontWeight": "900",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.parameterHints.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.formatOnSave": true,
  "editor.foldingStrategy": "indentation",
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.openEditors.visible": 0,
  "problems.showCurrentInStatus": true,
  "scm.diffDecorationsGutterWidth": 2,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/out": true
  },
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Iosevka SS04 Extended', 'Fira Code Retina'",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.fontSize": 12,
  "window.menuBarVisibility": "toggle",
  "window.title": "${dirty}${activeEditorLong}${separator}${appName}",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Monokai",
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#00ffff"
  },
  // **************************************************************
  // * Plugins
  // **************************************************************
  // JavaScript
  // ==========
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.rulers": [80]
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.rulers": [80]
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.rulers": [80]
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.rulers": [80]
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[html]": {
    "editor.formatOnSave": false
  },
  // Golang
  // ======
  "go.formatTool": "goimports",
  // Dart
  // ====
  "dart.openDevTools": "flutter",
  "dart.debugExternalLibraries": false,
  "dart.debugSdkLibraries": false,
  "[dart]": {
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  // Git lens
  // ========
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.defaultDateFormat": "MMMM Do, YYYY HH:MM",
  // Markup languages
  // ================
  "html.suggest.html5": false,
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.tabSize": 4,
    "editor.rulers": [80],
    "editor.defaultFormatter": null
  },
  "[asciidoc]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.tabSize": 4,
    "editor.rulers": [80]
  },
  // Vim mode
  // ========
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": false,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "f"],
      "after": ["<esc>"]
    },
    {
      "before": ["f", "j"],
      "after": ["<esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["]", "<space>"],
      "after": ["o", "<esc>", "k"]
    },
    {
      "before": ["[", "<space>"],
      "after": ["O", "<esc>", "j"]
    },
    {
      "before": ["g", "j"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["g", "k"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<c-l>"],
      "after": ["<c-w>", "<c-w>"]
    },
    {
      "before": ["<c-h>"],
      "after": ["<c-w>", "<c-w>"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  }
}
