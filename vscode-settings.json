{
  "editor.fontFamily": "'JetBrains Mono', 'Fantasque Sans Mono', Consolas, 'Fira Code Retina'",
  "editor.fontSize": 15,
  // "editor.lineHeight": 22,
  // "editor.letterSpacing": 0.7,
  // "editor.fontWeight": "100",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.parameterHints.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.formatOnSave": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.foldingStrategy": "indentation",
  "editor.semanticHighlighting.enabled": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,

  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // "explorer.openEditors.visible": 0,

  "gitlens.defaultDateStyle": "absolute",
  "gitlens.defaultDateFormat": "MMMM Do, YYYY HH:MM",

  "problems.showCurrentInStatus": true,
  "scm.diffDecorationsGutterWidth": 2,

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Iosevka SS04 Extended', 'Fira Code Retina'",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",

  "window.zoomLevel": 1,
  "window.menuBarVisibility": "toggle",
  "window.title": "${dirty}${activeEditorLong}${separator}${appName}",

  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "vscode-icons",

  // -- Language specific settings ------------------------------------

  "javascript.updateImportsOnFileMove.enabled": "never",
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.rulers": [100]
  },

  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.rulers": [100]
  },

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.rulers": [100]
  },

  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.rulers": [100]
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "html.suggest.html5": false,

  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.tabSize": 4,
    "editor.rulers": [80]
  },

  "python.jediEnabled": false,
  "go.formatTool": "goimports",
  "dart.openDevTools": "flutter",
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },

  // -- Vim Mode ------------------------------------------------------

  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": false,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "f"],
      "after": ["<esc>"]
    },
    {
      "before": ["f", "j"],
      "after": ["<esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["]", "<space>"],
      "after": ["o", "<esc>", "k"]
    },
    {
      "before": ["[", "<space>"],
      "after": ["O", "<esc>", "j"]
    },
    {
      "before": ["g", "j"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["g", "k"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<c-l>"],
      "after": ["<c-w>", "<c-w>"]
    },
    {
      "before": ["<c-h>"],
      "after": ["<c-w>", "<c-w>"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  }
}
